
 <div class="max-w-xl m-auto mt-24">
 <h3 class="text-2xl mb-6 text-indigo-darker">Welcome ðŸ˜€ðŸ’–</h3>
   <div class="border p-10 border-indigo-200 shadow-lg rounded">
      <h3 class="text-2xl mb-6 text-indigo-darker">Sign In</h3>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
         <div class="mb-4">
          <div class="">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" }, class: "border bg-gray-100 p-2 border-indigo-600"
                          %>
            </div>
         </div>
          <div class="mb-4">
            <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          </div>
          <div class="mb-4">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions flex">
          <%= f.button :submit, "Log in", class: "px-8 py-2 mb-4 bg-indigo-600 text-white rounded-lg" %>
          <%= link_to  "Back", root_path, class: "px-8 ml-6 py-2 mb-4 bg-gray-100 text-black" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

  </div>
</div>